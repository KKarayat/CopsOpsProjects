<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@mipmap/img_blue_gradient_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal|center_vertical"
                android:text=" Be more precise"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_20sp" />


        </RelativeLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:src="@mipmap/img_qrcode"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Reason"
            android:textColor="@color/sky_blue"
            android:textSize="@dimen/textsize_18sp"
            android:textStyle="bold" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_background">


            <CheckBox
                android:id="@+id/CBtheft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:button="@drawable/checkbox_selector"
                android:text="     Theft"
                android:textSize="@dimen/textsize_14sp"
                android:textColor="@color/aluminiumcolor" />

            <CheckBox
                android:id="@+id/CBburglary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/CBtheft"
                android:checked="true"
                android:paddingRight="10dp"
                android:button="@drawable/checkbox_selector"
                android:text="     Burglary"
                android:textSize="@dimen/textsize_14sp"
                android:textColor="@color/aluminiumcolor" />

            <CheckBox
                android:id="@+id/CBsexualviolence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/CBburglary"
                android:button="@drawable/checkbox_selector"
                android:text="     Sexual violence"
                android:textSize="@dimen/textsize_14sp"
                android:textColor="@color/aluminiumcolor" />



        </RelativeLayout>


        <EditText
            android:id="@+id/ETdescribetheincident"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:visibility="visible"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:background="@drawable/edittext_background"
            android:textColorHint="@color/aluminiumcolor"
            android:paddingLeft="10dp"
            android:textSize="@dimen/textsize_16sp"
            android:textColor="@color/black"
            android:hint="Describe the incident"/>

        <EditText
            android:id="@+id/ETotherinfoincident"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:background="@drawable/edittext_background"
            android:textColorHint="@color/aluminiumcolor"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16sp"
            android:hint="Other informations (Victims,place description....."/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center_horizontal">


            <ImageView
                android:id="@+id/IVcamera"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:background="@mipmap/img_round_camera"
                android:gravity="center_horizontal"></ImageView>

            <ImageView
                android:id="@+id/IVvideo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/img_round_video"
                android:gravity="center_horizontal"
                android:orientation="horizontal"></ImageView>


        </LinearLayout>



        <RelativeLayout
            android:id="@+id/RLenvoyer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/btn_blue_background">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/TVenvoyer"
                android:layout_marginRight="10dp"
                android:src="@mipmap/img_envoyer"/>

            <TextView
                android:id="@+id/TVenvoyer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="Envoyer"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16sp"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>






    </LinearLayout>

</ScrollView>