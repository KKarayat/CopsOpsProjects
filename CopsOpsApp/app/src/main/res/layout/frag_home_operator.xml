<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/RLprofileimage"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@mipmap/img_profileimg_background_new"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/IVprofilephoto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="40dp"
                    android:src="@mipmap/img_profile_photo" />


            </RelativeLayout>


            <TextView
                android:id="@+id/TVname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/RLprofileimage"
                android:layout_marginTop="21dp"
                android:gravity="center_horizontal"
                android:text="Avert Clayton"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVprofiledescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TVname"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:text="Grade ||"
                android:textColor="@color/sky_blue"
                android:textSize="@dimen/textsize_18sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/RLprogressbartext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVprofiledescription"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/TVprogressbarnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="06/10"
                    android:textColor="@color/aluminiumcolor"
                    android:textSize="@dimen/textsize_14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVprogressbarreports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal"
                    android:text="4 completed interventions"
                    android:textColor="@color/aluminiumcolor"
                    android:textSize="@dimen/textsize_14sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TVprogressbarnumber"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:max="10"
                    android:progress="6"
                    android:progressDrawable="@drawable/custom_progressbar" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RLavaiable"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/RLprogressbartext"
                android:layout_marginTop="20dp"
                android:background="@color/lightgrey"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Tvavaiable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30sp"
                    android:gravity="center_vertical"
                    android:text="Avaiable"
                    android:textColor="@color/blue_shade"
                    android:textSize="@dimen/textsize_20sp" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white" />


                <TextView
                    android:id="@+id/Tvnotavaiable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30sp"
                    android:gravity="center_vertical"
                    android:text="Not Avaiable"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RLnavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RLavaiable"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/btn_skyblue_shade">

                <ImageView
                    android:id="@+id/IVnavigationicon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="22dp"
                    android:src="@mipmap/img_navigation" />

                <TextView
                    android:id="@+id/TVnavigation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/IVnavigationicon"
                    android:text="Navigation"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_16sp" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/RLreportanincident"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RLnavigation"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/btn_skyblue_shade">

                <ImageView
                    android:id="@+id/IVposition"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="22dp"
                    android:src="@mipmap/img_positionintervention" />

                <TextView
                    android:id="@+id/TVreportanincidents"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/IVposition"
                    android:gravity="center_vertical"
                    android:text="Position of Interventions"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_16sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RLpositionofincidents"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/RLreportanincident"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/btn_background_shade">

                <ImageView
                    android:id="@+id/IVpositionofincidents"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="22dp"
                    android:src="@mipmap/img_postionincidents" />

                <TextView
                    android:id="@+id/TVpositionofincidents"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/IVpositionofincidents"
                    android:text="Position of incident"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_16sp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/RLpositionofincidents"
                android:layout_marginTop="30dp">


                <LinearLayout
                    android:id="@+id/llintervention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/llchat"
                    android:background="@mipmap/img_group_operatorscreen"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="right|center_vertical"
                        android:text="Assigned intervention"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llchat"
                    android:layout_width="120dp"
                    android:layout_height="105dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-25dp"
                    android:layout_marginRight="-20dp"
                    android:background="@mipmap/img_chatbackground_operator"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Messaging"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_16sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>

</ScrollView>